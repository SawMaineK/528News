<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardMarginVertical"
        android:layout_marginLeft="@dimen/cardMarginHorizontal"
        android:layout_marginRight="@dimen/cardMarginHorizontal"
        android:layout_marginTop="@dimen/cardMarginVertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardBackgroundColor="@color/colorAccent"
        app:contentPadding="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sub_header_vertical_margin"
            android:scaleType="centerCrop"
            android:id="@+id/img_advertise" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/txt_advertise_title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text=""
                android:textColor="@color/colorWhite"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/txt_advertise_description" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_currency"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorGreen"
            android:visibility="invisible"
            android:layout_height="@dimen/sub_header_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Today Currencies"
                android:textColor="@color/colorWhite"
                android:id="@+id/textView" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="USD"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/txt_usd_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1200.00"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/txt_usd_value" />
                <com.mikepenz.iconics.view.IconicsTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="right"
                    android:textColor="@color/colorWhite"
                    android:text="{cmd_trending_up}0.00"
                    android:id="@+id/txt_usd_history" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="SGD"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/txt_sgd_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1200.00"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/txt_sgd_value" />
                <com.mikepenz.iconics.view.IconicsTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="right"
                    android:textColor="@color/colorWhite"
                    android:text="{cmd_trending_up}0.00"
                    android:id="@+id/txt_sgd_history" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="CNY"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/txt_cny_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1200.00"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/txt_cny_value" />
                <com.mikepenz.iconics.view.IconicsTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="right"
                    android:textColor="@color/colorWhite"
                    android:text="{cmd_trending_down}0.00"
                    android:id="@+id/txt_cny_history" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="THB"
                    android:textColor="@color/colorWhite"
                    android:layout_weight="1"
                    android:id="@+id/txt_thb_name" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1200.00"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:id="@+id/txt_thb_value" />
                <com.mikepenz.iconics.view.IconicsTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:gravity="right"
                    android:textColor="@color/colorWhite"
                    android:text="{cmd_trending_down}0.00"
                    android:id="@+id/txt_thb_history" />
            </LinearLayout>
        </LinearLayout>



    </android.support.v7.widget.CardView>




</FrameLayout>